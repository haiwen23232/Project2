<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="shop.TabbedMain"
            xmlns:views="clr-namespace:shop.View">

    <NavigationPage Title="Shop" IconImageSource="home.png">
        <x:Arguments>
            <views:Shop />
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Category" IconImageSource="basket.png">
        <x:Arguments>
            <views:Category/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Cart" IconImageSource="cart.png">
        <x:Arguments>
            <views:Cart/>
        </x:Arguments>
    </NavigationPage>

    <NavigationPage Title="Account" IconImageSource="person.png">
        <x:Arguments>
            <views:Account />
        </x:Arguments>
    </NavigationPage>

</TabbedPage>
