<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="shop.View.ProductDetail" >

    <NavigationPage.TitleView>
        <Label Text=" Product Detail" FontSize="24" VerticalOptions="Center"/>
    </NavigationPage.TitleView>

    <ContentPage.Content>
        <StackLayout Margin="10,20">
            <Label x:Name="ProductName" FontSize="18" Text="product" HorizontalOptions="Center" />
            <Label x:Name="ProductPrice" FontSize="14" Text="price" HorizontalOptions="Center" />

            <Image Source="basket.png" />

            <StackLayout Orientation="Horizontal" HorizontalOptions="Center">
                <Label Text="Quantity: " Margin="0,5"/>

                <Entry Placeholder="Quantity" x:Name="quantityEntry" Keyboard="Numeric"/>
            </StackLayout>

            <Button
                Text="Add to cart"
                HorizontalOptions="Center"
                Clicked="AddToCart"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
